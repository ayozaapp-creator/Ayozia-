{
  "expo": {
    "name": "Ayozia",
    "slug": "Ayozia",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "ayozia",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0014"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Ayozia benötigt Zugriff auf die Kamera, um Fotos und Videos aufzunehmen.",
        "NSMicrophoneUsageDescription": "Ayozia benötigt Zugriff auf das Mikrofon, um Videos mit Ton aufzunehmen.",
        "NSPhotoLibraryUsageDescription": "Ayozia benötigt Zugriff auf die Fotomediathek, um Medien auszuwählen.",
        "NSPhotoLibraryAddUsageDescription": "Ayozia möchte aufgenommene Medien in der Mediathek speichern.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/ayozia_logo.png",
        "backgroundImage": "./assets/ayozia_logo.png",
        "monochromeImage": "./assets/ayozia_logo.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE"
      ],
      "package": "com.ayoza.Ayozia"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0a0014",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Ayozia benötigt Zugriff auf deine Fotos.",
          "cameraPermission": "Ayozia benötigt Zugriff auf die Kamera, um Fotos und Videos aufzunehmen.",
          "microphonePermission": "Ayozia benötigt Zugriff auf das Mikrofon für Videos mit Ton."
        }
      ],
      "expo-camera"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "c2198aa4-fe52-478d-ae87-f2d82ce5e524"
      }
    },
    "owner": "ayoza"
  }
}
